<container class="p-4">
    <div class="row">
        <div class="col-md-6 mx-auto">
            <div class="card text-center shadow-lg" style="border-radius: 12px; background-color: #3d73a1;">
                <div class="card-header" style="background-color: #2d6eb8; color: white; border-top-left-radius: 12px; border-top-right-radius: 12px;">
                    <h3 class="text-uppercase">Crear Nuevo KDrama</h3>
                </div>
                <div class="card-body" 
                {{#if error}}
<div class="alert alert-danger" style="border-radius: 8px;">
    {{error}}
</div>
{{/if}}
>
                    <form action="/add" method="post">
                        <!-- Título -->
                        <div class="input-group mt-4">
                            <label class="input-group-text" style="background-color: #e6f7ff; color: #007bb5; border-radius: 8px; width: 150px;">Título</label>
                            <input class="form-control" type="text" name="titulo" placeholder="Ejemplo: True Beauty" required maxlength="300" autofocus style="border: 1px solid #c1d3e0; border-radius: 8px;">
                        </div>

                        <!-- Año -->
                        <div class="input-group mt-3">
                            <label class="input-group-text" style="background-color: #e6f7ff; color: #007bb5; border-radius: 8px; width: 150px;">Año</label>
                            <input class="form-control" type="number" name="anio" value="{{kdrama.anio}}" placeholder="Ejemplo: 2020" min="1970" max="2025" style="border: 1px solid #007bb5;">
                        </div>

                        <!-- Género -->
                        <div class="input-group mt-3">
                            <label class="input-group-text" style="background-color: #e6f7ff; color: #007bb5; border-radius: 8px; width: 150px;">Género</label>
                            <input class="form-control" type="text" name="genero" placeholder="Ejemplo: Romance, Comedia" required  maxlength="300" style="border: 1px solid #c1d3e0; border-radius: 8px;">
                        </div>

                        <!-- Episodios -->
                        <div class="input-group mt-3">
                            <label class="input-group-text" style="background-color: #e6f7ff; color: #007bb5; border-radius: 8px; width: 150px;">Episodios</label>
                            <input class="form-control" type="number" name="episodios" placeholder="Ejemplo: 16" required style="border: 1px solid #c1d3e0; border-radius: 8px;">
                        </div>

                        <!-- Transmisión -->
                        <div class="input-group mt-3">
                            <label class="input-group-text" style="background-color: #e6f7ff; color: #007bb5; border-radius: 8px; width: 150px;">Transmisión</label>
                            <input class="form-control" type="text" name="transmision" placeholder="Ejemplo: tvN, Netflix" required maxlength="300" style="border: 1px solid #c1d3e0; border-radius: 8px;">
                        </div>

                        <!-- Protagonistas -->
                        <div class="input-group mt-3">
                            <label class="input-group-text" style="background-color: #e6f7ff; color: #007bb5; border-radius: 8px; width: 150px;">Protagonistas</label>
                            <textarea class="form-control" name="protagonistas" rows="2" maxlength="300" placeholder="Ejemplo: Moon Ga-young, Cha Eun-woo" required  maxlength="300" style="border: 1px solid #c1d3e0; border-radius: 8px;"></textarea>
                        </div>

                        <!-- Sinopsis -->
                        <div class="input-group mt-3">
                            <label class="input-group-text" style="background-color: #e6f7ff; color: #007bb5; border-radius: 8px; width: 150px;">Sinopsis</label>
                            <textarea class="form-control" name="sinopsis" rows="3" maxlength="300" placeholder="Escribe una breve sinopsis..." required  maxlength="300" style="border: 1px solid #c1d3e0; border-radius: 8px;"></textarea>
                        </div>

                        <!-- Calificación -->
                        <div class="input-group mt-3">
                            <label class="input-group-text" style="background-color: #e6f7ff; color: #007bb5; border-radius: 8px; width: 150px;">Calificación</label>
                            <input class="form-control" type="number" step="0.1" min="0" max="10" name="calificacion" placeholder="Ejemplo: 8.5" required style="border: 1px solid #c1d3e0; border-radius: 8px;">
                        </div>

                        <!-- Botón de envío -->
                        <div class="form-group d-grid gap-2 mt-4">
                            <button type="submit" class="btn btn-primary" style="background-color: #007bb5; border-color: #007bb5; color: white; border-radius: 8px; width: 100%;">Guardar KDrama</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</container>





